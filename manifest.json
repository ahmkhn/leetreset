{
    "manifest_version": 3,
    "name": "Leet Reset",
    "version": "1.0",
    "description": "A simple Chrome/Brave extension to automatically reset solved LeetCode problems.",
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/icon.webp",
        "48": "icons/icon.webp",
        "128": "icons/icon.webp"
      }
    },
    "permissions": [
      "storage",
      "https://leetcode.com/*"
    ],
    "host_permissions":[
      "https://leetcode.com/*"
    ],
    "content_scripts": [
      {
        "matches": ["https://leetcode.com/problems/*"],
        "js": ["content.js"]
      }
    ],
      "background": {
        "service_worker": "background.js"
      }
  }
  